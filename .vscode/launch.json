    "version": "0.2.0",
    "configurations": [  
        {
            "name": "Vite debug",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/packages/client"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Express debug",
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ],
            "cwd": "${workspaceFolder}/packages/server",
            "program": "index.js"
        }
    ]
}